<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#FF54c6c6" android:startColor="#FF4ab1b1" android:type="linear" />

            <stroke android:width="1dp" android:color="#FF4ab1b1" />

            <corners  android:bottomRightRadius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#FF101010" android:startColor="#FF212121" android:type="linear" />

            <stroke android:width="1dp" android:color="#FF212121" />

            <corners android:bottomRightRadius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>
