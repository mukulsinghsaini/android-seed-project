<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="#FF2785b8" android:startColor="#FF329cd0" android:type="linear" />

            <stroke android:width="1dp" android:color="#1a669b" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#FF3fb9da" android:startColor="#FF3495d1" android:type="linear" />

            <stroke android:width="1dp" android:color="#1a669b" />

            <corners android:radius="2dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>